{% layout "layout.liquid" %} {% block content %}
<div>
    <form action="/companies/{{companies.id}}?_method=PUT" method="post">
        <fieldset>
            <legend>Edit {{companies.name}}</legend>
            <label>
                NAME:<input 
                type="text" 
                name="name" 
                placeholder="enter companies name" 
                value="{{companies.name}}" />
            </label>
            <label>
                LOCATION:<input 
                type="text" 
                name="location" 
                placeholder="enter companies name" 
                value="{{companies.location}}" />
            </label>
            <label>
                WATCHED:<input 
                type="checkbox" 
                name="WATCHED" {% if companies.watched==true %} checked
                {% endif %} />
            </label>
        </fieldset>
        <input type="submit" value="Edit {{companies.name}}" />
        <a href="/companies/"><button>Back</button></a>
    </form>
</div>
{% endblock %}